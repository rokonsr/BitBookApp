@model BitBookApp.Models.Education

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBb.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Education</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EducationId)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.EducationTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EducationTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EducationTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Institute, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Institute, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Institute)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PassingYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PassingYear, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PassingYear)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Profile")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
