@model BitBookApp.Models.Experience

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBb.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Experience</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ExperienceId)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.ExpDesignation, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExpDesignation, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpDesignation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpCompany, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExpCompany, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpCompany)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExpYear, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpYear)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Profile")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
