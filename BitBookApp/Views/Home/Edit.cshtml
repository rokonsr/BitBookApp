@model BitBookApp.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBb.cshtml";
}

@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Update Post</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PostId)
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.TextPost, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TextPost)
                @Html.ValidationMessageFor(model => model.TextPost)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImagePost, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="image" name="image" />
                @*@Html.EditorFor(model => model.ImagePost)*@
                @Html.ValidationMessageFor(model => model.ImagePost)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                @if (Model.ImagePost != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(@Model.ImagePost)" width="200" height="200" style="border-radius: 5px;" />
                }

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
