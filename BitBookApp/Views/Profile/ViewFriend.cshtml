@using BitBookApp.Models
@model IEnumerable<BitBookApp.Models.ViewFriendRequiest>

@{
    ViewBag.Title = "ViewFriendRequest";
    Layout = "~/Views/Shared/_LayoutBb.cshtml";
    List<ProfileImage> profileImages = ViewBag.ProfilePicture;
}

<h2>View Friend Request</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FriendName)
        </th>
        <th>
            Picture
        </th>
        <th>Confirm Friend Request</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@item.FriendName, "ProfileView", "Profile", new { id = item.FriendId }, null)
            </td>
            <td>
                @foreach (var item1 in profileImages)
                {
                    if (item1.UserId == item.FriendId)
                    {
                        <img src="data:image;base64,@System.Convert.ToBase64String(item1.UserImage)" width="100" height="100" style="border-radius: 5px;" />
                    }
                }
            </td>
            <td>

                @Html.ActionLink("UnFriend", "Unfriend", "Profile", new { id = item.FriendId }, null)

            </td>
        </tr>
    }

</table>
